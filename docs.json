{
  "$schema": "https://mintlify.com/docs.json",
  "name": "Build on Arkade",
  "theme": "mint",
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "favicon": "/favicon.png",
  "colors": {
    "primary": "#391998",
    "light": "#F2F2F2",
    "dark": "#101013"
