{
  "$schema": "https://mintlify.com/docs.json",
  "name": "Build on Arkade",
  "theme": "mint",
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "favicon": "/favicon.ico",
  "colors": {
    "primary": "#391998",
    "light": "#F2F2F2",
    "dark": "#101013"
  },
  "appearance": {
    "default": "light",
    "strict": false
  },
  "fonts": {
    "body": {
      "family": "Geist",
      "weight": 400
    },
    "heading": {
      "family": "TT Firs Neue Trial",
      "weight": 500,
      "format": "woff",
      "source": "https://fonts.cdnfonts.com/s/120955/TT Firs Neue Trial Medium.woff"
    }
  },
  "navigation": {
    "groups": [
      {
        "group": "Learn about Arkade",
        "pages": [
          "index",
          "learn/background",
          "learn/architecture",
          "learn/arkade-script"
        ]
      },
      {
        "group": "Wallets and Payments",
        "pages": [
          "wallets/introduction",
          "wallets/setup",
          "wallets/balances",
          "wallets/settlement",
          "wallets/detecting-payments",
          "wallets/payment-history",
          "wallets/ramps"
        ]
      },
      {
        "group": "Simple Contracts",
        "pages": [
          "contracts/lightning-swaps",
          "contracts/chain-swaps",
          "contracts/oracle-dlc",
          "contracts/channels",
          "contracts/escrow"
        ]
      }
    ]
  },
  "footer": {
    "socials": {
      "x": "https://x.com/arkade_os",
      "github": "https://github.com/arkade-os",
      "telegram": "https://t.me/arkade_os"
    }
  }
}