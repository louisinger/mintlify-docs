            "pages": [
              "learn/architecture/roles",
              "learn/architecture/components",
              "learn/architecture/lifecycle"
            ]
          },
          {
            "group": "Security",
            "pages": [
              "learn/security/bitcoin-native-security",
              "learn/security/unilateral-exit",
              "learn/security/transaction-finality",
              "learn/security/liveness",
              "learn/security/advanced-security",
              "learn/security/economic-security",
              "learn/security/risks-limitations"
            ]
          }
        ]
      },
      {
        "tab": "Wallet and Payments",
        "pages": [
          "wallets/introduction",
          "wallets/setup",
          "wallets/ark-addresses",
          "wallets/receiving-payments",
