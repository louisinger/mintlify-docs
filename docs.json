{
  "$schema": "https://mintlify.com/docs.json",
  "name": "Build on Arkade",
  "theme": "mint",
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "favicon": {
    "light": "/favicon/favicon-light.png",
    "dark": "/favicon/favicon-dark.png"
  },
  "colors": {
    "primary": "#391998",
    "light": "#F2F2F2",
    "dark": "#101013"
  },
  "appearance": {
    "default": "light",
    "strict": false
  },
  "seo": {
    "indexing": "all"
  },
  "contextual": {
    "options": [
      "copy",
      "view",
      "chatgpt",
      "claude"
    ]
